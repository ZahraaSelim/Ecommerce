@page
@model Ecommerce.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log Out";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Log Out</h2>
                    <p class="text-center">Are you sure you want to log out?</p>
                    <form method="post">
                        <button type="submit" class="btn btn-primary w-100">Log Out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>